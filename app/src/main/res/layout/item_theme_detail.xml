<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_theme_detail_list"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="10dp"
    >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/anhcongthuc"
            android:scaleType="centerCrop"
            android:background="#00FFFFFF"
            android:src="@drawable/hambeger"
            android:contentDescription="TODO"></ImageView>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:background="#9E000000"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_theme_detail_nm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Hambuger" />

            <ImageButton
                android:id="@+id/img_btn_theme_detail_arrow_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_arrow_white"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageButton>
        </LinearLayout>

</androidx.cardview.widget.CardView>