<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/layout_item_Search"
    app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/img_avatar_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#00FFFFFF"
            android:src="@drawable/hambeger"
            android:contentDescription="TODO"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="#9E000000"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_recipe_name_rearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Hambuger" />
        </LinearLayout>

</androidx.cardview.widget.CardView>