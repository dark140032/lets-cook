<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >




            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="2"
                android:columnCount="2"
                android:orientation="vertical"
                android:layout_marginTop="50dp"

                >
                <ImageView
                    android:layout_width="411dp"
                    android:layout_height="311dp"
                    android:id="@+id/anh1"
                    android:scaleType="centerCrop"
                    android:background="#00FFFFFF"
                    android:src="@drawable/hambeger"
                    android:contentDescription="TODO"></ImageView>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Hamberger"
                    tools:layout_editor_absoluteX="151dp"
                    tools:layout_editor_absoluteY="98dp"
                    android:textSize="30dp"
                    android:gravity="left"
                    android:textStyle="bold"

                    />



            </GridLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza hải sản là món dễ ăn, thơm ngon và được nhiều người yêu thích"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyên liệu"
                android:textSize="25dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tôm sú : 300gr, Mực ống : 200gr, Ớt chuông : 2 trái, Phô mai Mozzarella : 100gr, Tương cà : 1 muỗng canh"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cách làm"
                android:textSize="25dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/Sơ chế và ướp hải sản, 2/Tiến hành nấu"
                android:textSize="20dp"
                />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>